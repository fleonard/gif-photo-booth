block includes

- var settings = { DESCRIPTION: 'Gif Photo Booth', AUTHOR: 'fleonard', USE_ANALYTICS: false, TITLE: 'Gif Photo BoothÂ®' }

//- App starts here ----------------------------------------
doctype html
block license
html(lang='en')

  //- Head ---------------------------------------------------------------
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')

      title= `${title} | ${settings.TITLE} is dev ${isDev}`

      //- Meta
      meta(name='description', content=settings.DESCRIPTION)
      meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
      link(rel='apple-touch-icon', href='/apple-touch-icon.png')
      meta(name='author', content=settings.AUTHOR)

      //- Styles
      block styles
        if !isDev
          link(rel='stylesheet', href='/styles/main.app.1.0.0.css')

      //- Fav Icons
      link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
      link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
      link(rel='icon', type='image/png', href='/favicon-16x16.png', sizes='16x16')
      link(rel='manifest', href='/manifest.json')
      link(rel='mask-icon', href='/safari-pinned-tab.svg', color='#5bbad5')
      meta(name='msapplication-TileColor', content='#b91d47')
      meta(name='msapplication-TileImage', content='/mstile-144x144.png')
      meta(name='theme-color', content='#ffffff')
      
  //- Body ---------------------------------------------------------------
  body

    main(role='main', tabindex='-1')
      block content

    //- JavaScripts -----------------------------------------------------
    block scripts
      script(src='/scripts/main.manifest.0.0.1.js')
      script(src='/scripts/main.app.0.0.1.js')

    if settings.USE_ANALYTICS
      //- Analytics code goes here
